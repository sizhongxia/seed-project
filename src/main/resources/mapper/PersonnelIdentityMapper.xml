<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.project.dao.PersonnelIdentityMapper">
  <resultMap id="BaseResultMap" type="com.company.project.model.PersonnelIdentity">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="empNo" jdbcType="VARCHAR" property="empno" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="companyUuid" jdbcType="VARCHAR" property="companyuuid" />
    <result column="proUuid" jdbcType="VARCHAR" property="prouuid" />
    <result column="groupUuid" jdbcType="VARCHAR" property="groupuuid" />
    <result column="isGroupLeader" jdbcType="INTEGER" property="isgroupleader" />
    <result column="workType" jdbcType="INTEGER" property="worktype" />
    <result column="deptUuid" jdbcType="VARCHAR" property="deptuuid" />
    <result column="post" jdbcType="VARCHAR" property="post" />
    <result column="state" jdbcType="INTEGER" property="state" />
